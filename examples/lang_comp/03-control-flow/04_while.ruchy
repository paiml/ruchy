// LANG-COMP-003: While Loop Example
// Demonstrates condition-based iteration

let count = 1
println("Counting with while:")
while count <= 5 {
    println(f"  {count}")
    count = count + 1
}

// Sum from 1 to 10 using while
let sum = 0
let n = 1
println("Sum 1 to 10:")
while n <= 10 {
    sum = sum + n
    n = n + 1
}
println(f"  Sum: {sum}")
