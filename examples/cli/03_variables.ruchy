// Example 3: Variables
// Demonstrates: Variable declarations, reassignment
// Usage: ruchy examples/cli/03_variables.ruchy

let name = "Ruchy"
let version = 3.99
let is_awesome = true

println(f"Language: {name}")
println(f"Version: {version}")
println(f"Is awesome: {is_awesome}")

// Reassignment
let count = 0
count = count + 1
count = count + 1
println(f"Count: {count}")
