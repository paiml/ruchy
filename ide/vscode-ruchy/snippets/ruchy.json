{
  "Function": {
    "prefix": "fn",
    "body": [
      "fn ${1:name}(${2:params}) {",
      "\t${3:// body}",
      "}"
    ],
    "description": "Create a function"
  },
  "If Statement": {
    "prefix": "if",
    "body": [
      "if ${1:condition} {",
      "\t${2:// then}",
      "}"
    ],
    "description": "If statement"
  },
  "If-Else": {
    "prefix": "ife",
    "body": [
      "if ${1:condition} {",
      "\t${2:// then}",
      "} else {",
      "\t${3:// else}",
      "}"
    ],
    "description": "If-else statement"
  },
  "For Loop": {
    "prefix": "for",
    "body": [
      "for ${1:item} in ${2:iterable} {",
      "\t${3:// body}",
      "}"
    ],
    "description": "For loop"
  },
  "While Loop": {
    "prefix": "while",
    "body": [
      "while ${1:condition} {",
      "\t${2:// body}",
      "}"
    ],
    "description": "While loop"
  },
  "Match": {
    "prefix": "match",
    "body": [
      "match ${1:expr} {",
      "\t${2:pattern} => ${3:result},",
      "\t_ => ${4:default}",
      "}"
    ],
    "description": "Match expression"
  },
  "Struct": {
    "prefix": "struct",
    "body": [
      "struct ${1:Name} {",
      "\t${2:field}: ${3:Type}",
      "}"
    ],
    "description": "Struct definition"
  },
  "Impl": {
    "prefix": "impl",
    "body": [
      "impl ${1:Type} {",
      "\tfn ${2:method}(${3:&self}) {",
      "\t\t${4:// body}",
      "\t}",
      "}"
    ],
    "description": "Implementation block"
  },
  "Test": {
    "prefix": "test",
    "body": [
      "#[test]",
      "fn ${1:test_name}() {",
      "\t${2:// test body}",
      "\tassert!(${3:condition});",
      "}"
    ],
    "description": "Test function"
  },
  "Print": {
    "prefix": "println",
    "body": "println(\"${1:message}\");",
    "description": "Print line"
  },
  "Assert": {
    "prefix": "assert",
    "body": "assert!(${1:condition}, \"${2:message}\");",
    "description": "Assert statement"
  },
  "Todo": {
    "prefix": "todo",
    "body": "// TODO: ${1:description}",
    "description": "TODO comment"
  }
}