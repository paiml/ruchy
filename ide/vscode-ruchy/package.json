{
  "name": "ruchy",
  "displayName": "Ruchy Language Support",
  "description": "Language support and quality tools for Ruchy programming language",
  "version": "0.1.0",
  "publisher": "ruchy-lang",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "keywords": [
    "ruchy",
    "quality",
    "testing",
    "linting"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ruchy-lang/ruchy"
  },
  "activationEvents": [
    "onLanguage:ruchy"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ruchy",
        "aliases": ["Ruchy", "ruchy"],
        "extensions": [".ruchy"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ruchy",
        "scopeName": "source.ruchy",
        "path": "./syntaxes/ruchy.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "ruchy.runTest",
        "title": "Ruchy: Run Tests"
      },
      {
        "command": "ruchy.lint",
        "title": "Ruchy: Lint File"
      },
      {
        "command": "ruchy.score",
        "title": "Ruchy: Show Quality Score"
      },
      {
        "command": "ruchy.prove",
        "title": "Ruchy: Verify Proofs"
      }
    ],
    "configuration": {
      "title": "Ruchy",
      "properties": {
        "ruchy.binaryPath": {
          "type": "string",
          "default": "ruchy",
          "description": "Path to the ruchy binary"
        },
        "ruchy.enableLinting": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic linting"
        },
        "ruchy.showQualityScore": {
          "type": "boolean",
          "default": true,
          "description": "Show quality score in status bar"
        },
        "ruchy.lintOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run lint on file save"
        }
      }
    },
    "snippets": [
      {
        "language": "ruchy",
        "path": "./snippets/ruchy.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.0.0",
    "typescript": "^4.9.0"
  }
}